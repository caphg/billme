
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title><%= get_bill_id %></title>
  <style>
    <%= @css %>
  </style>
</head>
<body>
<header class="clearfix">
  <div id="logo">
    <img src="<%= @data[:logo] %>" alt="Logo">
  </div>
  <h1>INVOICE <%= get_bill_id %></h1>
  <div id="company" class="clearfix">
    <div><%= @data[:company_name] %></div>
    <div><%= @data[:company_address] %><br /> <%= @data[:company_city] %>, <%= @data[:company_country] %></div>
    <div><%= @data[:company_phone] %></div>
    <div><a href="mailto:<%= @data[:company_email] %>"><%= @data[:company_email] %></a></div>
  </div>
  <div id="project">
    <% @groups[:client].sections.each do |section| %>
    <div><span>PROJECT</span> <%= section.data[:project_name] %></div>
    <div><span>CLIENT</span> <%= section.data[:name] %></div>
    <div><span>ADDRESS</span> <%= section.data[:address] %></div>
    <div><span>EMAIL</span> <a href="mailto:<%= section.data[:email] %>"><%= section.data[:email] %></a></div>
    <div><span>DATE</span> <%= section.data[:date] %></div>
    <div><span>DUE DATE</span> <%= section.data[:due_date] %></div>
    <% end %>
  </div>
</header>
<main>
  <table>
    <thead>
    <tr>
      <th class="service">SERVICE</th>
      <th class="desc">DESCRIPTION</th>
      <th>PRICE</th>
      <th>QTY</th>
      <th>TOTAL</th>
    </tr>
    </thead>
    <tbody>
    <% @groups[:items].sections.each do |section| %>
    <tr>
      <td class="service"><%= section.data[:service] %></td>
      <td class="desc"><%= section.data[:description] %></td>
      <td class="unit"><%= section.data[:unit] %><%= section.data[:currency] %></td>
      <td class="qty"><%= section.data[:quantity] %></td>
      <td class="total"><%= section.data[:quantity].to_i * section.data[:unit].to_i %><%= section.data[:currency] %></td>
    </tr>
    <% end %>
    </tbody>
  </table>
  <div id="notices">
    <div>NOTICE:</div>
    <div class="notice"><%= @data[:notice] %></div>
  </div>
</main>
<footer>
    <%= @data[:footer] %>
</footer>
</body>
</html>